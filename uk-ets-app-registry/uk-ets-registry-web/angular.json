{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "uk-ets-registry-web": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": {
              "base": "dist/uk-ets-registry-web",
              "browser": ""
            },
            "index": "src/index.html",
            "polyfills": ["src/polyfills.ts", "@angular/localize/init"],
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "assets": [
              "src/assets",
              {
                "glob": "**/*",
                "input": "./node_modules/govuk-frontend/dist/govuk/assets",
                "output": "assets/"
              }
            ],
            "styles": [
              "src/sass/ukets-styles.scss",
              "node_modules/dialog-polyfill/dialog-polyfill.css",
              "node_modules/quill/dist/quill.core.css",
              "node_modules/quill/dist/quill.bubble.css",
              "node_modules/quill/dist/quill.snow.css"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "node_modules/govuk-frontend/dist/govuk/",
                "src/sass/include",
                "."
              ]
            },
            "allowedCommonJsDependencies": [
              "core-js",
              "file-saver",
              "crypto-js",
              "dayjs",
              "google-libphonenumber",
              "js-sha256",
              "base64-js",
              "quill"
            ],
            "extractLicenses": false,
            "sourceMap": true,
            "optimization": false,
            "namedChunks": true,
            "browser": "src/main.ts"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "aot": true,
              "optimization": {
                "scripts": true,
                "styles": {
                  "minify": true,
                  "inlineCritical": false
                },
                "fonts": true
              },
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            },
            "development": {},
            "es5": {
              "tsConfig": "./tsconfig.es5.json"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "uk-ets-registry-web:build"
          },
          "configurations": {
            "development": {
              "buildTarget": "uk-ets-registry-web:build:development"
            },
            "production": {
              "buildTarget": "uk-ets-registry-web:build:production"
            },
            "es5": {
              "buildTarget": "uk-ets-registry-web:build:es5"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "uk-ets-registry-web:build"
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run",
          "options": {}
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "e2e/protractor.conf.js",
            "devServerTarget": "uk-ets-registry-web:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "uk-ets-registry-web:serve:production"
            },
            "env": {
              "protractorConfig": "e2e/protractor.conf.js",
              "devServerTarget": ""
            },
            "remote": {
              "protractorConfig": "e2e/protractor.conf.js",
              "baseUrl": "https://e2e.ukets.net",
              "devServerTarget": ""
            },
            "local": {
              "protractorConfig": "e2e/protractor.conf.js",
              "baseUrl": "http://ukets.docker.internal",
              "devServerTarget": ""
            }
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["@ngrx/schematics"],
    "analytics": false
  },
  "schematics": {
    "@angular-eslint/schematics:application": {
      "setParserOptionsProject": true
    },
    "@angular-eslint/schematics:library": {
      "setParserOptionsProject": true
    }
  }
}
